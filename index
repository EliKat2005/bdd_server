<?php
// Credenciales de la OTRA máquina virtual (Base de Datos)
$servername = "192.168.50.10";
$username = "admin_web";
$password = "password123";
$dbname = "consultoria_db";

// Crear conexión
$conn = new mysqli($servername, $username, $password, $dbname);

// Verificar si falló
if ($conn->connect_error) {
    die("<h1>Error de Conexión a la BD:</h1> " . $conn->connect_error);
}
?>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Proyecto Consultoría</title>
    <style>
        body { font-family: 'Segoe UI', sans-serif; background-color: #f0f2f5; text-align: center; padding-top: 50px; }
        .container { background: white; width: 80%; margin: 0 auto; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { padding: 12px; border-bottom: 1px solid #ddd; }
        th { background-color: #007bff; color: white; }
        tr:hover { background-color: #f5f5f5; }
        .status { color: green; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Sistema de Gestión de Usuarios</h1>
        <p>Conectado exitosamente a la Base de Datos en <strong>192.168.50.10</strong></p>
        
        <table>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Estado</th>
            </tr>
            <?php
            // Consultar usuarios activos (Soft Delete logic)
            $sql = "SELECT id, nombre, email, rol FROM usuarios WHERE deleted_at IS NULL";
            $result = $conn->query($sql);

            if ($result->num_rows > 0) {
                while($row = $result->fetch_assoc()) {
                    echo "<tr>
                            <td>" . $row["id"]. "</td>
                            <td>" . $row["nombre"]. "</td>
                            <td>" . $row["email"]. "</td>
                            <td>" . $row["rol"]. "</td>
                            <td class='status'>Activo</td>
                          </tr>";
                }
            } else {
                echo "<tr><td colspan='5'>No hay usuarios registrados</td></tr>";
            }
            $conn->close();
            ?>
        </table>
    </div>
</body>
</html>
